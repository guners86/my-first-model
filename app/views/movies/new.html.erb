<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">

            <h1>Nueva Pelicula</h1>
            <%= form_for @movie do |f| %>
            
                <div class="form-group">
            	    <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa un nombre" %>
            	</div>
            	<div class="form-group">
            	    <%= f.text_field :duration, class: "form-control input-lg", placeholder: "Ingresa la duracion de la pelicula" %>
            	</div>
            	<div class="form-group">
            	    <%= f.text_field :year, class: "form-control input-lg", placeholder: "Ingresa el año de la pelicula" %>
            	</div>
            	<div class="form-group">
            	    <%= f.text_field :rating, class: "form-control input-lg", placeholder: "Ingresa el rating" %>
            	</div>
            	<div class="form-group">
            		<%= f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa una descripción" %>
            	</div>
            	<div class="form-group">
            		<%= f.url_field :image_url, class: "form-control input-lg", placeholder: "Ingresa una url para la imagen" %>
            	</div>
            	<div>
            		<%= f.submit class: "btn btn-primary btn-lg btn-block" %>
            	</div>
            
            <% end %>
        </div>
	</div>
</div>